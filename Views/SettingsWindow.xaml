<Window x:Class="ContribCalendar.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="贡献日历 - 设置"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Height="500" Width="520"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- 显示大小 -->
                <GroupBox Header="显示大小" Margin="0,0,0,10" Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="55"/>
                        </Grid.ColumnDefinitions>
                        <Slider Name="ScaleSlider"
                                Grid.Column="0"
                                Minimum="50" Maximum="200"
                                TickFrequency="10"
                                IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"/>
                        <TextBlock Name="ScaleLabel"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="SemiBold"/>
                    </Grid>
                </GroupBox>

                <!-- 扫描路径 -->
                <GroupBox Header="扫描路径" Margin="0,0,0,10" Padding="8">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="ScanPathTextBox"
                                     Grid.Column="0"
                                     Text="{Binding Settings.ScanPath, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,8,0" Height="26"/>
                            <Button Name="BrowseButton"
                                    Grid.Column="1"
                                    Content="浏览..."
                                    Width="70" Height="26"
                                    Click="BrowseButton_Click"/>
                        </Grid>
                        <TextBlock Text="选择包含日期格式文件夹（如：2026年2月27日）的根目录"
                                   FontSize="10" Foreground="#666" Margin="0,4,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <!-- 忽略文件夹 -->
                <GroupBox Header="忽略文件夹" Margin="0,0,0,10" Padding="8">
                    <StackPanel>
                        <Grid Height="140">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <ListBox Name="IgnoredFoldersListBox"
                                     Grid.Column="0"
                                     SelectionMode="Single"
                                     Margin="0,0,8,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBox Name="NewIgnoreFolderTextBox"
                                         Height="26" Margin="0,0,0,6"
                                         KeyDown="NewIgnoreFolderTextBox_KeyDown"/>
                                <Button Name="AddIgnoreButton" Content="添加"
                                        Height="26" Margin="0,0,0,6"
                                        Click="AddIgnoreButton_Click"/>
                                <Button Name="RemoveIgnoreButton" Content="移除"
                                        Height="26" IsEnabled="False"
                                        Click="RemoveIgnoreButton_Click"/>
                            </StackPanel>
                        </Grid>
                        <TextBlock Text="支持通配符 *，如 node_modules、.git"
                                   FontSize="10" Foreground="#666" Margin="0,4,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- 状态 -->
                <GroupBox Header="状态" Padding="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="扫描路径: " FontSize="11" Foreground="#555"/>
                            <TextBlock Name="StatusPathText" FontSize="11" Foreground="#333"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="数据库: " FontSize="11" Foreground="#555"/>
                            <TextBlock Name="StatusDbText" FontSize="11" Foreground="#333" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Name="ScanNowButton" Content="立即扫描"
                    Width="90" Height="30" Margin="0,0,8,0"
                    Click="ScanNowButton_Click"/>
            <Button Name="SaveButton" Content="保存"
                    Width="70" Height="30"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
